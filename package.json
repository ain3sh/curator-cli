{
  "name": "curator-cli",
  "version": "0.1.0",
  "description": "Blazing fast CLI to curate web content as clean markdown",
  "bin": {
    "curate": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --external:fsevents",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["cli", "markdown", "scraping", "firecrawl", "curator"],
  "author": "Ainesh Chatterjee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ain3sh/curator-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ain3sh/curator-cli/issues"
  },
  "homepage": "https://github.com/ain3sh/curator-cli#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
